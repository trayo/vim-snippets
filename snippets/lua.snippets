snippet #!
	#!/usr/bin/env lua
	$1
snippet loc
	local ${1} = ${2}
snippet fun
	function ${1:name}(${2})
		${0}
	end
snippet for
	for ${1:i} = ${2:1}, ${3:10} do
		${0}
	end
snippet forp
	for ${1:k}, ${2:v} in pairs(${3:table_name}) do
	   ${0}
	end
snippet fori
	for ${1:k}, ${2:v} in ipairs(${3:table_name}) do
	   ${0}
	end
